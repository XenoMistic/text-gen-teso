<Window x:Class="UndauntedPledges.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:UndauntedPledges.ViewModel"
        xmlns:cvr="clr-namespace:UndauntedPledges.Converters"
        xmlns:viewModel="clr-namespace:UndauntedPledges.ViewModel"
        d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel, IsDesignTimeCreatable=False}"
        mc:Ignorable="d"
        Background="#f9fafb"
        Title="Undaunted Pledges" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="{x:Type Label}" x:Key="LabelStyle">
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Margin" Value="10 5 10 0"/>
            </Style>

            <Style TargetType="{x:Type DatePicker}" x:Key="DatePickerStyle">
                <Setter Property="MaxHeight" Value="25"/>
                <Setter Property="Margin" Value="10 5 10 0"/>
            </Style>

            <cvr:VisibilityConverter x:Key="VisibilityConverter"/>

        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" MinHeight="60"/>
                <RowDefinition Height="1*" MinHeight="60"/>
                <RowDefinition Height="1*" MinHeight="60"/>
                <RowDefinition Height="4*" MinHeight="60"/>
                <RowDefinition Height="1*" MinHeight="60"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Style="{StaticResource LabelStyle}" Content="Дата Начала"/>
                    <DatePicker Style="{StaticResource DatePickerStyle}"
                                SelectedDate="{Binding SelectedStartDate}"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Style="{StaticResource LabelStyle}" Content="Дата Окончания"/>
                    <DatePicker Style="{StaticResource DatePickerStyle}"
                                SelectedDate="{Binding SelectedEndDate}"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1">
                <Label Style="{StaticResource LabelStyle}" Content="Время"/>
                <TextBox Height="25" Margin="10 5 10 0"
                         Text="{Binding Time}"
                         VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Label Style="{StaticResource LabelStyle}" Content="Роль"/>
                <ComboBox Height="25"
                          Margin="10 5 10 0"
                          ItemsSource="{Binding Roles}"
                          DisplayMemberPath="DisplayName"
                          SelectedItem="{Binding SelectedRole}"/>
            </StackPanel>
            <Grid Grid.Row="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" MinHeight="25"/>
                    <RowDefinition Height="10*" MinHeight="40"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Style="{StaticResource LabelStyle}" Content="Описание"/>
                <TextBox Grid.Row="1"
                         Margin="10 5 10 5"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding Description}">
                </TextBox>
            </Grid>
            <Button Grid.Row="4" Margin="10" Content="Создать" Command="{Binding SaveCommand}"/>
        </Grid>

        <GridSplitter Grid.Column="0" Width="3" Background="Gray" Opacity="1" Margin="0,0,0,0" Cursor="SizeWE"/>

        <Grid Grid.Column="1" d:Visibility="Hidden" Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverter}}">
            <Border Background="LightGray">
                <Label Content="Загрузка..." VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
            </Border>
        </Grid>

        <StackPanel Grid.Column="1" Visibility="{Binding IsLoading, Converter={StaticResource VisibilityConverter}, ConverterParameter=1}">
            <Label Style="{StaticResource LabelStyle}" Content="Обеты"/>
            <DataGrid IsReadOnly="True"
                      AutoGenerateColumns="False" Margin="10 5 10 5"
                      CanUserResizeRows="False"
                      CanUserAddRows="False"
                      CanUserReorderColumns="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      ItemsSource="{Binding Pledges}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Width="*" Binding="{Binding DateTime, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                    <DataGridTextColumn Header="Мадж (BASE)" Width="*" Binding="{Binding MajPledge}"/>
                    <DataGridTextColumn Header="Глирион (BASE)" Width="*" Binding="{Binding GlirionPledge}"/>
                    <DataGridTextColumn Header="Ургарлак (DLC)" Width="*" Binding="{Binding UrgarlagPledge}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
